<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/studio_background"
    tools:context=".ui.studio.StudioActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content - Tablet Layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Left Panel - Node Palette (Wider for tablets) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/nodePaletteCard"
            android:layout_width="320dp"
            android:layout_height="0dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Node Palette"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp" />

                    <!-- Action Nodes -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Actions"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/addTapNodeButton"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Tap"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"
                        app:icon="@drawable/ic_tap_small"
                        app:iconSize="24dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/addSwipeNodeButton"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Swipe"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"
                        app:icon="@drawable/ic_swipe_small"
                        app:iconSize="24dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/addWaitNodeButton"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Wait"
                        android:textSize="16sp"
                        android:layout_marginBottom="20dp"
                        app:icon="@drawable/ic_wait_small"
                        app:iconSize="24dp" />

                    <!-- Logic Nodes -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Logic"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/addConditionNodeButton"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="If/Else"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp"
                        app:icon="@drawable/ic_condition"
                        app:iconSize="24dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/addLoopNodeButton"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Loop"
                        android:textSize="16sp"
                        android:layout_marginBottom="20dp"
                        app:icon="@drawable/ic_loop"
                        app:iconSize="24dp" />

                </LinearLayout>

            </ScrollView>

        </com.google.android.material.card.MaterialCardView>

        <!-- Center Panel - Script Canvas (Larger for tablets) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/canvasCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:layout_constraintStart_toEndOf="@id/nodePaletteCard"
            app:layout_constraintEnd_toStartOf="@id/propertiesCard"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/controlsCard">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.tapcraft.pro.automation.ui.components.VisualScriptCanvas
                    android:id="@+id/scriptCanvas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/canvas_background" />

                <!-- Canvas Controls -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/zoomInButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:fabSize="normal"
                        app:srcCompat="@drawable/ic_zoom_in" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/zoomOutButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:fabSize="normal"
                        app:srcCompat="@drawable/ic_zoom_out" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/resetZoomButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fabSize="normal"
                        app:srcCompat="@drawable/ic_center_focus" />

                </LinearLayout>

            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Right Panel - Properties (Wider for tablets) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/propertiesCard"
            android:layout_width="360dp"
            android:layout_height="0dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/controlsCard">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Script Info -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Script Info"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/scriptNameText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Script Name"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/scriptDescriptionText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Script Description"
                        android:textSize="16sp"
                        android:textColor="?android:attr/textColorSecondary"
                        android:layout_marginBottom="20dp" />

                    <!-- Validation Status -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Validation"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/validationErrorsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No errors"
                        android:textColor="@color/error_color"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/validationWarningsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No warnings"
                        android:textColor="@color/warning_color"
                        android:visibility="gone"
                        android:layout_marginBottom="20dp" />

                    <!-- Node Properties Panel -->
                    <LinearLayout
                        android:id="@+id/nodePropertiesPanel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Node Properties"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/nodeTypeText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Node Type"
                            android:textSize="16sp"
                            android:layout_marginBottom="12dp" />

                        <LinearLayout
                            android:id="@+id/nodePropertiesContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </com.google.android.material.card.MaterialCardView>

        <!-- Bottom Controls -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/controlsCard"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_margin="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:layout_constraintStart_toEndOf="@id/nodePaletteCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/playButton"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Play"
                    android:layout_marginEnd="12dp"
                    app:icon="@drawable/ic_play_arrow" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/pauseButton"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pause"
                    android:layout_marginEnd="12dp"
                    app:icon="@drawable/ic_pause" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/stopButton"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stop"
                    app:icon="@drawable/ic_stop" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>